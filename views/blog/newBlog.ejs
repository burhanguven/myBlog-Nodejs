<script>
    $(document).ready(function () {
        $("#myButton").click( function(){
            var blogTitle=$("#blogTitle").val();
            var comSentence=$("#comSentence").val();
            var comImage=$("#comImage").val();
            var blog=CKEDITOR.instances.myTextAria.getData();

            var data={
                blogTitle:blogTitle,
                comSentence:comSentence,
                comImage:comImage,
                blog:blog
            };
            $.post('addNewBlog',{data:data})
                .then(function (addNewBlog) {
                    console.log(addNewBlog);
                });

        });
    });
</script>
